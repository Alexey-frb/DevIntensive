<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.MainActivity"
    >

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:fitsSystemWindows="true"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >

                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header_bg"
                    />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:titleTextColor="@color/white"
                    app:layout_collapseMode="pin"
                    />
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <!-- Статистика -->
                <LinearLayout
                    android:id="@+id/user_info_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_largest_112dp"
                    android:background="@color/gray"
                    android:orientation="horizontal"
                    >
                    <!-- Рейтинг -->
                    <LinearLayout
                        style="@style/layout_field_stats_info"
                        >

                        <TextView
                            android:id="@+id/info_raiting"
                            style="@style/text_stats_info.value"
                            android:text="5"
                            />

                        <TextView
                            style="@style/text_stats_info.hint"
                            android:text="@string/raiting"
                            />
                    </LinearLayout>

                    <View
                        style="@style/line_vertical"
                        />
                    <!-- Написано строк кода -->
                    <LinearLayout
                        style="@style/layout_field_stats_info"
                        android:layout_weight="2"
                        >

                        <TextView
                            android:id="@+id/info_rows_code"
                            style="@style/text_stats_info.value"
                            android:text="5"
                            />

                        <TextView
                            style="@style/text_stats_info.hint"
                            android:text="@string/rows_code"
                            />
                    </LinearLayout>

                    <View
                        style="@style/line_vertical"
                        />
                    <!-- Проектов -->
                    <LinearLayout
                        style="@style/layout_field_stats_info"
                        >

                        <TextView
                            android:id="@+id/info_project"
                            style="@style/text_stats_info.value"
                            android:text="5"
                            />

                        <TextView
                            style="@style/text_stats_info.hint"
                            android:text="@string/project"
                            />
                    </LinearLayout>
                </LinearLayout>


                <!-- Мобильный -->
                <LinearLayout
                    style="@style/layout_user_info"
                    >

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_black_24dp"
                        />

                    <LinearLayout
                        style="@style/layout_field_user_info"
                        >

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <EditText
                                android:id="@+id/phone_et"
                                style="@style/text_user_info"
                                android:hint="@string/phone_hint"
                                android:inputType="phone"
                                android:text="+7 (927) 672-49-59"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"
                        />
                </LinearLayout>

                <View
                    style="@style/line_horizontal"
                    />
                <!-- E-mail -->
                <LinearLayout
                    style="@style/layout_user_info"
                    >

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_email_black_24dp"
                        />

                    <LinearLayout
                        style="@style/layout_field_user_info"
                        >

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <EditText
                                android:id="@+id/email_et"
                                style="@style/text_user_info"
                                android:hint="@string/email_hint"
                                android:inputType="textEmailAddress"
                                android:text="alexey.frb@gmail.com"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"
                        />
                </LinearLayout>

                <View
                    style="@style/line_horizontal"
                    />
                <!-- Профиль в VK -->
                <LinearLayout
                    style="@style/layout_user_info"
                    >

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/vk_circle"
                        />

                    <LinearLayout
                        style="@style/layout_field_user_info"
                        >

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <EditText
                                android:id="@+id/vk_et"
                                style="@style/text_user_info"
                                android:hint="@string/vk_hint"
                                android:inputType="textUri"
                                android:text="vk.com/alx_tt"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_remove_red_eye_black_24dp"
                        />
                </LinearLayout>

                <View
                    style="@style/line_horizontal"
                    />
                <!-- Репозиторий -->
                <LinearLayout
                    style="@style/layout_user_info"
                    >

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/github_circle"
                        />

                    <LinearLayout
                        style="@style/layout_field_user_info"
                        >

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <EditText
                                android:id="@+id/git_et"
                                style="@style/text_user_info"
                                android:hint="@string/git_hint"
                                android:inputType="textUri|textMultiLine"
                                android:text="github.com/Alexey/DevIntensive"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_remove_red_eye_black_24dp"
                        />
                </LinearLayout>

                <View
                    style="@style/line_horizontal"
                    />
                <!-- О себе -->
                <LinearLayout
                    style="@style/layout_user_info"
                    >

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_account_circle_black_24dp"
                        />

                    <LinearLayout
                        style="@style/layout_field_user_info"
                        android:layout_height="wrap_content"
                        >

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <EditText
                                android:id="@+id/info_et"
                                style="@style/text_user_info"
                                android:hint="@string/info_hint"
                                android:inputType="textMultiLine"
                                android:text="@string/info_text"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fab_right_space"
            android:src="@drawable/ic_mode_edit_black_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"
            />
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>