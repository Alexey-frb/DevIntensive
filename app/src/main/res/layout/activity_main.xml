<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activities.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- Статистика -->
        <LinearLayout
            android:id="@+id/user_info_wrapper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_largest_112dp"
            android:background="@color/gray"
            android:orientation="horizontal"
            >
            <!-- Рейтинг -->
            <LinearLayout
                style="@style/layoutFieldStatsInfo"
                >

                <TextView
                    android:id="@+id/info_raiting"
                    style="@style/textStatsInfo.value"
                    android:text="5"
                    />

                <TextView
                    style="@style/textStatsInfo.hint"
                    android:text="@string/raiting"
                    />
            </LinearLayout>

            <View
                style="@style/lineVertical"
                />
            <!-- Написано строк кода -->
            <LinearLayout
                style="@style/layoutFieldStatsInfo"
                android:layout_weight="2"
                >

                <TextView
                    android:id="@+id/info_rows_code"
                    style="@style/textStatsInfo.value"
                    android:text="5"
                    />

                <TextView
                    style="@style/textStatsInfo.hint"
                    android:text="@string/rows_code"
                    />
            </LinearLayout>

            <View
                style="@style/lineVertical"
                />
            <!-- Проектов -->
            <LinearLayout
                style="@style/layoutFieldStatsInfo"
                >

                <TextView
                    android:id="@+id/info_project"
                    style="@style/textStatsInfo.value"
                    android:text="5"
                    />

                <TextView
                    style="@style/textStatsInfo.hint"
                    android:text="@string/project"
                    />
            </LinearLayout>
        </LinearLayout>


        <!-- Мобильный -->
        <LinearLayout
            style="@style/layoutUserInfo"
            >

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_call_black_24dp"
                />

            <LinearLayout
                style="@style/layoutFieldUserInfo"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/phone_et"
                        style="@style/textUserInfo"
                        android:hint="@string/phone_hint"
                        android:inputType="phone"
                        android:text="+7 (927) 672-49-59"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_phone_in_talk_black_24dp"
                />
        </LinearLayout>

        <View
            style="@style/lineHorizontal"
            />
        <!-- E-mail -->
        <LinearLayout
            style="@style/layoutUserInfo"
            >

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_email_black_24dp"
                />

            <LinearLayout
                style="@style/layoutFieldUserInfo"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/email_et"
                        style="@style/textUserInfo"
                        android:hint="@string/email_hint"
                        android:inputType="textEmailAddress"
                        android:text="alexey.frb@gmail.com"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_send_black_24dp"
                />
        </LinearLayout>

        <View
            style="@style/lineHorizontal"
            />
        <!-- Профиль в VK -->
        <LinearLayout
            style="@style/layoutUserInfo"
            >

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/vk_circle"
                />

            <LinearLayout
                style="@style/layoutFieldUserInfo"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/vk_et"
                        style="@style/textUserInfo"
                        android:hint="@string/vk_hint"
                        android:inputType="textUri"
                        android:text="vk.com/alx_tt"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_remove_red_eye_black_24dp"
                />
        </LinearLayout>

        <View
            style="@style/lineHorizontal"
            />
        <!-- Репозиторий -->
        <LinearLayout
            style="@style/layoutUserInfo"
            >

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/github_circle"
                />

            <LinearLayout
                style="@style/layoutFieldUserInfo"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/git_et"
                        style="@style/textUserInfo"
                        android:hint="@string/git_hint"
                        android:inputType="textUri|textMultiLine"
                        android:text="github.com/Alexey/DevIntensive"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_remove_red_eye_black_24dp"
                />
        </LinearLayout>

        <View
            style="@style/lineHorizontal"
            />
        <!-- О себе -->
        <LinearLayout
            style="@style/layoutUserInfo"
            >

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_account_circle_black_24dp"
                />

            <LinearLayout
                style="@style/layoutFieldUserInfo"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/info_et"
                        style="@style/textUserInfo"
                        android:hint="@string/info_hint"
                        android:inputType="textMultiLine"
                        android:text="@string/info_text"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
